<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/addSensorImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:contentDescription="@null"
        android:elevation="2dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/checkSensorImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:contentDescription="@null"
        android:elevation="2dp"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sensorRemoteMeasureTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/addSensorImageView"
        app:layout_constraintStart_toStartOf="@id/sensorRemoteNameTextView"
        app:layout_constraintTop_toBottomOf="@id/sensorRemoteTypeTextView" />

    <TextView
        android:id="@+id/sensorRemoteTypeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/addSensorImageView"
        app:layout_constraintStart_toStartOf="@id/sensorRemoteNameTextView"
        app:layout_constraintTop_toBottomOf="@id/sensorRemoteNameTextView" />

    <TextView
        android:id="@+id/sensorRemoteNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/addSensorImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>